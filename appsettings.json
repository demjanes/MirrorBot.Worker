{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "UpdateHandler": "Debug", // debug только для хендлера
      "PollingService": "Information"
    }
  },
  "BotConfiguration": {
    "BotToken": "YOUR_BOT_TOKEN",
    //[Convert]::ToBase64String((1..32 | ForEach-Object { [byte](Get-Random -Maximum 256) })) - генерация через PS
    "EncryptionKey": "your_super_secret_key_at_least_32_characters_long"
  },
  "Limits": {
    "MaxBotsPerUser": 3
  },
  "Mongo": {
    "ConnectionString": "your_connection_string",
    "Database": "MirrorBotTest1"
  },
  "AdminNotifications": {
    "Enabled": true,

    "Info": {
      "Enabled": true,
      "ChatId": -1006464646
    },
    "Ref": {
      "Enabled": true,
      "ChatId": -1004546546
    },

    "BatchSize": 1,
    "FlushIntervalMs": 1000,
    "CombineIntoSingleMessage": true,
    "MaxQueueSize": 10000
  },

  "AI": {
    "Provider": "YandexGPT",
    "YandexGPT": {
      "ApiKey": "YOUR_YANDEX_API_KEY",
      "FolderId": "YOUR_FOLDER_ID",
      "Model": "yandexgpt/latest",
      "BaseUrl": "https://llm.api.cloud.yandex.net/foundationModels/v1",
      "Temperature": 0.7,
      "MaxTokens": 2000
    },
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "Model": "gpt-4",
      "BaseUrl": "https://api.openai.com/v1",
      "Temperature": 0.7,
      "MaxTokens": 2000
    }
  },

  "Speech": {
    "Provider": "YandexSpeechKit",
    "YandexSpeechKit": {
      "ApiKey": "YOUR_YANDEX_API_KEY",
      "FolderId": "YOUR_FOLDER_ID",
      "SttUrl": "https://stt.api.cloud.yandex.net/speech/v1/stt:recognize",
      "TtsUrl": "https://tts.api.cloud.yandex.net/speech/v1/tts:synthesize",
      "Language": "en-US",
      "Voice": "jane",
      "Speed": 1.0
    },
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "SttModel": "whisper-1",
      "TtsModel": "tts-1",
      "Voice": "alloy"
    }
  },

  "EnglishTutor": {
    "DefaultMode": "Casual",
    "ContextMessagesCount": 10,
    "SystemPromptTemplate": "You are a friendly English tutor..."
  }
}
